#!/bin/bash
#
#  ubicoind The Ubicoin Core server.
#
#
# chkconfig: 345 80 20
# description: ubicoind
# processname: ubicoind
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/ubicoind, see below
if [ -f /etc/sysconfig/ubicoind ]; then
        . /etc/sysconfig/ubicoind
fi

RETVAL=0

prog=ubicoind
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/ubicoind
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/ubicoind}

# ubicoind defaults to /usr/bin/ubicoind, override with BITCOIND_BIN
ubicoind=${BITCOIND_BIN-/usr/bin/ubicoind}

# ubicoind opts default to -disablewallet, override with BITCOIND_OPTS
ubicoind_opts=${BITCOIND_OPTS--disablewallet}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $ubicoind $ubicoind_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
